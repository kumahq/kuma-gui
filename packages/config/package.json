{
  "name": "@kumahq/config",
  "version": "1.0.0",
  "private": true,
  "description": "Shared dependencies and configuration for kuma-gui",
  "author": "Kong",
  "type": "module",
  "main": "./src/index.cjs",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "require": "./src/index.cjs",
      "import": "./src/index.ts"
    },
    "./cypress/e2e": {
      "import": "./src/cypress/e2e.ts"
    },
    "./cypress/steps": {
      "import": "./src/cypress/steps/index.ts"
    },
    "./ci": {
      "require": "./scripts/ci.cjs"
    },
    "./vite/plugins/*": {
      "import": "./src/vite/plugins/*.ts"
    }
  },
  "dependencies": {
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.5",
    "@badeball/cypress-cucumber-preprocessor": "^22.2.0",
    "@cucumber/gherkin-utils": "^9.2.0",
    "@eslint/js": "^9.30.0",
    "@stylistic/eslint-plugin": "^4.4.1",
    "@stylistic/stylelint-plugin": "^3.1.3",
    "@vue/eslint-config-typescript": "^14.5.1",
    "cypress": "^14.5.0",
    "cypress-fail-fast": "^7.1.1",
    "cypress-fail-on-console-error": "^5.1.1",
    "cypress-terminal-report": "^7.2.0",
    "esbuild": "^0.25.5",
    "escape-string-regexp": "^4.0.0",
    "eslint": "^9.30.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-json-schema-validator": "^5.4.1",
    "eslint-plugin-no-unsanitized": "^4.1.2",
    "eslint-plugin-vue": "^10.2.0",
    "glob": "^11.0.3",
    "globals": "^16.3.0",
    "lockfile-lint": "^4.14.1",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recommended-scss": "^15.0.1",
    "stylelint-config-recommended-vue": "^1.6.1",
    "stylelint": "^16.21.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitepress": "^2.0.0-alpha.7",
    "vitest": "^3.2.4",
    "vue-tsc": "^2.2.10",
    "deepmerge": "^4.3.1",
    "js-yaml": "^4.1.0"
  }
