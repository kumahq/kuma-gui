{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    "Kong/public-shared-renovate//base/github-actions",
    "Kong/public-shared-renovate//base/javascript"
  ],
  "dependencyDashboard": true,
  "printConfig": true,
  "labels": [
    "dependencies",
    "renovate-bot"
  ],
  "baseBranchPatterns": [
    "master"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "recreateWhen": "always",
    "rebaseWhen": "behind-base-branch"
  },
  "postUpdateOptions": [
    "npmDedupe"
  ],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "prCreation": "not-pending",
  "osvVulnerabilityAlerts": true,
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": [
        "lockFileMaintenance"
      ],
      "dependencyDashboardApproval": true
    },
    {
      "matchPackageNames": [
        "escape-string-regexp"
      ],
      "enabled": false
    },
    {
      "description": [
        " Disable grouping of minor and patch updates for non-0.x packages",
        " inherited from base config `Kong/public-shared-renovate//base/javascript`"
      ],
      "matchCategories": [
        "js"
      ],
      "matchPackageNames": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "groupName": null
    },
    {
      "description": [
        "Reduce `minimumReleaseAge` for internal toolings"
      ],
      "matchPackageNames": [
        "@kong**/**",
        "kumahq/**"
      ],
      "minimumReleaseAge": "2 hours",
      "minimumReleaseAgeBehaviour": "timestamp-optional"
    },
    {
      "groupName": "node minors and patches",
      "matchPackageNames": [
        "node",
        "npm"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "dependencyDashboardApproval": true
    },
    {
      "groupName": "node majors",
      "matchPackageNames": [
        "node",
        "npm"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "dependencyDashboardApproval": true
    },
    {
      "matchCategories": [
        "js"
      ],
      "matchDepTypes": [
        "engines"
      ],
      "rangeStrategy": "bump"
    }
  ]
}
