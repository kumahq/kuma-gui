{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    "Kong/public-shared-renovate//base/github-actions",
    "Kong/public-shared-renovate//base/javascript"
  ],
  "dependencyDashboard": true,
  "printConfig": true,
  "labels": [
    "dependencies",
    "renovate-bot"
  ],
  "baseBranchPatterns": [
    "master"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "recreateWhen": "always",
    "rebaseWhen": "behind-base-branch"
  },
  "postUpdateOptions": [
    "npmDedupe"
  ],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "osvVulnerabilityAlerts": true,
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "packageRules": [
    {
      "description": [
        " Deletes and recreates the package-lock, should only be done at the beginning",
        " of a release cycle therefore requires manual approval via the dashboard"
      ],
      "matchUpdateTypes": [
        "lockFileMaintenance"
      ],
      "dependencyDashboardApproval": true
    },
    {
      "description": [
        " Upgrades node, should only be for security issues or done at the beginning",
        " of a release cycle therefore requires manual approval via the dashboard"
      ],
      "groupName": "node",
      "matchPackageNames": [
        "node"
      ],
      "dependencyDashboardApproval": true
    },
    {
      "description": [
        " Disable grouping of minor and patch updates for non-0.x packages",
        " inherited from base config `Kong/public-shared-renovate//base/javascript`"
      ],
      "matchCategories": [
        "js"
      ],
      "matchPackageNames": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "groupName": null
    },
    {
      "description": [
        "Reduce `minimumReleaseAge` for internal toolings"
      ],
      "matchPackageNames": [
        "@kong**/**",
        "kumahq/**"
      ],
      "minimumReleaseAge": "2 hours",
      "minimumReleaseAgeBehaviour": "timestamp-optional"
    },
    {
      "description": [
        " Disable:",
        " - `@kong-ui-public/app-layout`: downstream conflicts due to pinned versions",
        " - `escape-string-regexp`: need to stick with current version because of esm vs cjs"
      ],
      "matchPackageNames": [
        "@kong-ui-public/app-layout",
        "escape-string-regexp"
      ],
      "enabled": false
    },
    {
      "description": [
        " Makes renovate bump engines as well as nvmrc when upgrading node",
        " see https://github.com/kumahq/kuma-gui/pull/4460"
      ],
      "matchCategories": [
        "js"
      ],
      "matchDepTypes": [
        "engines"
      ],
      "rangeStrategy": "bump"
    }
  ]
}
